@model IEnumerable<StudentskiDom.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojRucaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojVecera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrebivalisteInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicniPodaci)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SkolovanjeInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrojRucaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrojVecera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrebivalisteInfo.PrebivalisteInfoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicniPodaci.LicniPodaciId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SkolovanjeInfo.SkolovanjeInfoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soba.SobaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
